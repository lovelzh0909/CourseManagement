<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.coursemanagement.mapper.CourseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.coursemanagement.entity.Course">
        <id column="id" property="id" />
        <result column="course_name" property="courseName" />
        <result column="type" property="type" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="enter_stu_num" property="enterStuNum" />
        <result column="intro" property="intro" />
        <result column="teacher_name" property="teacherName" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_name, type, start_time, end_time, enter_stu_num, intro, teacher_name, version
    </sql>

</mapper>
